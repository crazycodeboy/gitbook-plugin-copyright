{
  "name": "gitbook-plugin-copyright-v",
  "version": "0.4.4",
  "description": "基于Gitbook实现的版权保护插件,用于复制内容时追加版本信息以及文章末尾添加版权小尾巴",
  "main": "index.js",
  "scripts": {
    "test": "echo welcome to use gitbook-plugin-copyright created by crazycodeboy"
  },
  "engines": {
    "gitbook": ">=2.4.3"
  },
  "gitbook": {
    "properties": {
      "site": {
        "type": "string",
        "required": true,
        "title": "Copyright site"
      },
      "author": {
        "type": [
          "string",
          "object"
        ],
        "required": true,
        "title": "Copyright author"
      },
      "website": {
        "type": [
          "string",
          "object"
        ],
        "required": true,
        "title": "Copyright information links to website"
      },
      "image": {
        "type": [
          "string",
          "object"
        ],
        "required": false,
        "title": "Copyright information display pictures"
      },
      "copyProtect": {
        "type": "boolean",
        "title": "Whether to append copyright information when copying content,true or false",
        "required": false,
        "default": true
      },
      "enableFooter": {
        "type": "boolean",
        "title": "Whether to enable footer",
        "required": false,
        "default": false
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crazycodeboy/gitbook-plugin-copyright.git"
  },
  "keywords": [
    "gitbook-plugin-copyright",
    "gitbook-plugin",
    "copyright",
    "website",
    "wechat"
  ],
  "author": {
    "name": "crazycodeboy",
    "email": "crazycodeboy@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/crazycodeboy/gitbook-plugin-copyright/issues"
  },
  "homepage": "https://github.com/crazycodeboy/gitbook-plugin-copyright"
}
